<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grey"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/meirenyu_bg_green">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fanhui"
                android:layout_centerVertical="true"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="11dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xiugaimima"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jiumima"
            android:textColor="@color/textcolor"
            android:textSize="16sp"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="16dp"
            android:maxLength="16"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mimahint"
            android:textSize="13sp"
            android:textColor="@color/textcolor"
            android:background="@color/white"
            android:layout_marginTop="9dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingLeft="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xinmima"
            android:textColor="@color/textcolor"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mimahint"
            android:textSize="13sp"
            android:textColor="@color/textcolor"
            android:background="@color/white"
            android:layout_marginTop="9dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingLeft="16dp"
            android:maxLength="16"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/querenmima"
            android:textColor="@color/textcolor"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mimahint"
            android:textSize="13sp"
            android:textColor="@color/textcolor"
            android:background="@color/white"
            android:layout_marginTop="9dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingLeft="16dp"
            android:maxLength="16"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/queding"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/pingjia"/>


    </LinearLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2FD2D1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@mipmap/fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="积分换好礼"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="派普瑜伽砖\n兑换积分：2900"
                    android:textColor="@color/textcolor"
                    android:textSize="15sp"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/tu3_1"/>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text1"
                    android:text="朵琪专业瑜伽服\n兑换积分：8200"
                    android:textColor="#898E92"
                    android:textSize="15sp"
                    android:drawableTop="@mipmap/tu4_1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp">
                <TextView
                    android:id="@+id/text3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="健身瑜伽服两件套\n兑换积分：9800"
                    android:textColor="@color/textcolor"
                    android:textSize="15sp"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/tu7"/>

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text1"
                    android:text="青蛙瑜伽垫\n兑换积分：4000"
                    android:textColor="#898E92"
                    android:textSize="15sp"
                    android:drawableTop="@mipmap/tu8"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp">
                <TextView
                    android:id="@+id/text5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="樊酷初学加厚瑜伽垫\n兑换积分：5200"
                    android:textColor="@color/textcolor"
                    android:textSize="15sp"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/tu9"/>

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text1"
                    android:text="艾米达瑜伽毛巾\n兑换积分：1600"
                    android:textColor="#898E92"
                    android:textSize="15sp"
                    android:drawableTop="@mipmap/tu10"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp">
                <TextView
                    android:id="@+id/text7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="博帝加厚型专业瑜伽垫\n兑换积分：8600"
                    android:textColor="@color/textcolor"
                    android:textSize="15sp"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/tu11"/>

                <TextView
                    android:id="@+id/text8"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text1"
                    android:text="艾米达专业瑜伽垫\n兑换积分：6800"
                    android:textColor="#898E92"
                    android:textSize="15sp"
                    android:drawableTop="@mipmap/tu6_1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/shezhi_bg">
    <!--导航栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/head_green">
        <TextView
            android:id="@+id/search_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/back_btn"
            android:layout_margin="12dp"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/search_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="24sp"
            android:textColor="@color/font_white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/setting_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--推送消息-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@android:color/white"
                    android:padding="10dp"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="接收推送消息"
                        android:textSize="20sp"
                        android:textColor="@color/shezhi_font_bk"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"/>
                    <CheckBox
                        android:id="@+id/push_message_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="true"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@drawable/check_btn_selector"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="开启后将收到精选的内容推送和活动通知"
                    android:textColor="@color/gray_black"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:textSize="15dp"
                    android:gravity="center_vertical"/>
                <!--省流量模式...-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white">
                    <!--省流量-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@android:color/white"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="省流量模式"
                            android:textSize="20sp"
                            android:textColor="@color/shezhi_font_bk"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"/>
                        <CheckBox
                            android:id="@+id/saving_flow_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:checked="true"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@drawable/check_btn_selector"
                            android:layout_marginRight="15dp"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/shezhi_bg" />
                    <!--音量翻页-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@android:color/white"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="使用音量键翻页"
                            android:textSize="20sp"
                            android:textColor="@color/shezhi_font_bk"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"/>
                        <CheckBox
                            android:id="@+id/volume_btn_to_Page"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:checked="true"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@drawable/check_btn_selector"
                            android:layout_marginRight="15dp"/>
                    </RelativeLayout>
                </LinearLayout>
                <!--消息提醒，微博绑定，修改密码，字体大小-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:layout_marginTop="20dp">
                    <!--消息提醒-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@android:color/white"
                        android:padding="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="消息提醒"
                            android:textSize="20sp"
                            android:textColor="@color/shezhi_font_bk"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:id="@+id/message_setting_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@mipmap/right_image"
                            android:layout_marginRight="15dp"/>
                    </RelativeLayout>
                    <!--绑定微博-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/shezhi_bg"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@android:color/white"
                        android:padding="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="绑定微博"
                            android:textSize="20sp"
                            android:textColor="@color/shezhi_font_bk"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:id="@+id/set_weiBo_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@mipmap/right_image"
                            android:layout_marginRight="15dp"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/shezhi_bg"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <!--修改密码-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@android:color/white"
                        android:padding="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="修改密码"
                            android:textSize="20sp"
                            android:textColor="@color/shezhi_font_bk"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@mipmap/right_image"
                            android:layout_marginRight="15dp"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/shezhi_bg"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <!--字号大小-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@android:color/white"
                        android:padding="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="字号大小"
                            android:textSize="20sp"
                            android:textColor="@color/shezhi_font_bk"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:id="@+id/font_setting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@mipmap/right_image"
                            android:layout_marginRight="15dp"/>
                    </RelativeLayout>
                </LinearLayout>
                <!--清楚缓存-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:layout_marginTop="20dp">
                    <!--清楚缓存-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@android:color/white"
                        android:padding="10dp"
                        >
                        <TextView
                            android:id="@+id/clear_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="清除缓存"
                            android:textSize="20sp"
                            android:textColor="@color/shezhi_font_bk"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:id="@+id/clear_huancun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@mipmap/right_image"
                            android:layout_marginRight="15dp"/>
                    </RelativeLayout>
                    <!--关于我们-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/shezhi_bg"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@android:color/white"
                        android:padding="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关于我们"
                            android:textSize="20sp"
                            android:textColor="@color/shezhi_font_bk"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:id="@+id/about_us_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@mipmap/right_image"
                            android:layout_marginRight="15dp"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/shezhi_bg"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <!--退出登陆-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@android:color/white"
                        android:padding="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="退出登陆"
                            android:textSize="20sp"
                            android:textColor="@color/shezhi_font_bk"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:id="@+id/exit_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@mipmap/right_image"
                            android:layout_marginRight="15dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/meirenyu_bg_green">
            <ImageView
                android:id="@+id/fanhui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fanhui"
                android:layout_centerVertical="true"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="11dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_order"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"/>
        </RelativeLayout>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/quanbu"
                android:button="@null"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/quanbu"
                android:textColor="@color/textcolor"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:paddingTop="9dp"
                android:paddingBottom="8dp"
                />
            <RadioButton
                android:id="@+id/daifukuan"
                android:button="@null"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/daifukuan"
                android:textColor="@color/textcolor"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:paddingTop="9dp"
                android:paddingBottom="8dp"
                />
            <RadioButton
                android:id="@+id/daifahuo"
                android:button="@null"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/daifahuo"
                android:textColor="@color/textcolor"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:paddingTop="9dp"
                android:paddingBottom="8dp"
                />
            <RadioButton
                android:id="@+id/daishouhuo"
                android:button="@null"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/daishouhuo"
                android:textColor="@color/textcolor"
                android:textSize="15dp"
                android:gravity="center_horizontal"
                android:paddingTop="9dp"
                android:paddingBottom="8dp"
                />
            </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:id="@+id/quanbu_view"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/meirenyu_bg_green"/>
            <View
                android:id="@+id/daifukuan_view"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/meirenyu_bg_green"
                android:visibility="invisible"/>
            <View
                android:id="@+id/daifahuo_view"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/meirenyu_bg_green"
                android:visibility="invisible"/>
            <View
                android:id="@+id/daishouhuo_view"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/meirenyu_bg_green"
                android:visibility="invisible"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            android:background="@color/jiesuan_bg_grey">
        <ImageView
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gouwuche_jiesuan01"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jiesuanjieshao01"
                android:textColor="@color/textcolor"
                android:textSize="15sp"/>
            <TextView
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jiege"
                android:textSize="15sp"
                android:textColor="@color/textcolor"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="52"
                android:textColor="@color/red"
                android:textSize="15sp"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jiesuanguige01"
                android:textColor="@color/textcolor"
                android:textSize="15sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_marginBottom="6dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/heji"
                    android:textSize="15sp"
                    android:textColor="@color/textcolor"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="52"
                    android:textColor="@color/red"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jiaoyichenggong"
                    android:textSize="15sp"
                    android:textColor="@color/textcolor"
                    android:layout_marginRight="6dp"
                    />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pingjia"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="6dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:layout_gravity="right"
            android:background="@drawable/pingjia"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            android:background="@color/jiesuan_bg_grey">
            <ImageView
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gouwuche_jiesuan02"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/jiesuanjieshao02"
                        android:textColor="@color/textcolor"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_marginLeft="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/jiege"
                        android:textSize="15sp"
                        android:textColor="@color/textcolor"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="98"
                        android:textColor="@color/red"
                        android:textSize="15sp"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jiesuanguige02"
                    android:textColor="@color/textcolor"
                    android:textSize="15sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:layout_marginBottom="6dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/heji"
                        android:textSize="15sp"
                        android:textColor="@color/textcolor"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="98"
                        android:textColor="@color/red"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/jiaoyichenggong"
                        android:textSize="15sp"
                        android:textColor="@color/textcolor"
                        android:layout_marginRight="6dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pingjia"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginTop="4dp"
            android:layout_marginRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="6dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:layout_gravity="right"
            android:background="@drawable/pingjia"/>
        </LinearLayout>
    </LinearLayout>



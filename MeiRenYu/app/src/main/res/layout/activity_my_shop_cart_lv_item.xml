<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/my_shop_cart_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >
    <LinearLayout
        android:id="@+id/diyipai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/jiesuan_top"
        android:background="@color/jiesuan_bg_grey"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <CheckBox
            android:id="@+id/chance_shop"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:background="@drawable/shop_cart_btn_selector"
            android:layout_margin="10dp"
            />

        <ImageView
            android:id="@+id/shop_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="6dp"
            android:src="@mipmap/gouwuche_jiesuan01" />
        <!--购物车-->
        <LinearLayout
            android:id="@+id/shop_cart_layout"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jiesuanjieshao01"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/shop_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/jiesuanguige01"
                android:textColor="@color/textcolor"
                android:textSize="15dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:gravity="bottom"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/shop_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="￥52"
                    android:textColor="@color/red"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/shop_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:text="X5"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <!--编辑-->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/shop_cart_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/shop_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jian"
                    android:padding="15dp"
                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/change_shop_number"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="20sp"
                    android:gravity="center"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:id="@+id/shop_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jia"
                    android:padding="15dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/change_shop_size"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/jiesuanguige01"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    />
                <ImageView
                    android:id="@+id/shop_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xia"
                    android:layout_gravity="center_vertical"
                    android:padding="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2FD2D1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@mipmap/fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="美人瑜商城"
            android:textColor="#FEFEFE"
            android:textSize="18sp" />
    </RelativeLayout>
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/cengtu1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="166dp"
                    android:layout_marginTop="125dp"
                    android:src="@mipmap/tuoyuan1" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="125dp"
                    android:src="@mipmap/tuoyuan2" />
            </LinearLayout>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="8dp"
                android:background="@mipmap/shousuo"
                android:drawableLeft="@mipmap/cazao"
                android:paddingBottom="7dp"
                android:paddingLeft="12dp"
                android:paddingTop="7dp"
                android:text="专业瑜伽垫"
                android:textColor="#DEDEDE"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/yuan"
                        android:gravity="center"
                        android:text="瑜伽服"
                        android:layout_margin="15dp"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:id="@+id/textView1" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/yuan1"
                        android:gravity="center"
                        android:text="瑜伽垫"
                        android:layout_margin="15dp"
                        android:textColor="#aaadb0"
                        android:textSize="12sp"
                        android:id="@+id/textView2" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/yuan1"
                        android:gravity="center"
                        android:text="其他商品"
                        android:layout_margin="15dp"
                        android:textColor="#aaadb0"
                        android:textSize="12sp"
                        android:id="@+id/textView3" />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="23dp"
                android:drawableLeft="@mipmap/juxing"
                android:drawablePadding="4dp"
                android:text="推荐商品"
                android:textColor="#333333"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/tu1"
                        android:text="莫代尔专业瑜伽服"
                        android:layout_margin="5dp"
                        android:textSize="12sp"
                        android:gravity="center_horizontal"
                        android:drawablePadding="10dp"/>

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/tu2"
                        android:text="艾米达加厚型瑜伽垫"
                        android:layout_margin="5dp"
                        android:textSize="12sp"
                        android:gravity="center_horizontal"
                        android:drawablePadding="10dp"/>

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/tu3"
                        android:text="艾米达加厚型瑜伽垫"
                        android:layout_margin="5dp"
                        android:textSize="12sp"
                        android:gravity="center_horizontal"
                        android:drawablePadding="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/tu4"
                        android:text="莫代尔专业瑜伽服"
                        android:layout_margin="5dp"
                        android:textSize="12sp"
                        android:gravity="center_horizontal"
                        android:drawablePadding="10dp"/>

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/tu5"
                        android:text="艾米达加厚型瑜伽垫"
                        android:layout_margin="5dp"
                        android:textSize="12sp"
                        android:gravity="center_horizontal"
                        android:drawablePadding="10dp"/>

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/tu6"
                        android:text="艾米达加厚型瑜伽垫"
                        android:layout_margin="5dp"
                        android:textSize="12sp"
                        android:gravity="center_horizontal"
                        android:drawablePadding="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="8dp"
            android:drawableTop="@mipmap/shouye"
            android:text="首页"
            android:textColor="#2FD2D0"
            android:textSize="11sp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="8dp"
            android:drawableTop="@mipmap/gouwuche"
            android:text="购物车"
            android:textColor="#898E92"
            android:textSize="11sp"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="8dp"
            android:drawableTop="@mipmap/zaixiankefu"
            android:text="在线客服"
            android:textColor="#898E92"
            android:textSize="11sp"
            android:gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>

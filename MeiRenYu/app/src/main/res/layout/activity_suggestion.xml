<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/jianyi_bg"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:focusable="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/meirenyu_bg_green">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fanhui"
                android:layout_centerVertical="true"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="11dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jianyiyijian"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"/>
        </RelativeLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="@string/xiejianyiyijian"
            android:gravity="start"
            android:textColor="@color/textcolor"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="18dp"
            android:background="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tijiao"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingRight="14dp"
            android:paddingLeft="14dp"
            android:layout_gravity="right"
            android:background="@drawable/tijiao"/>



    </LinearLayout>

</LinearLayout>

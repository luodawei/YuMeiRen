<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--导航栏-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_blue">
                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_left"
                    android:padding="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_centerInParent="true"
                    android:textSize="20sp"
                    android:text="注册"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:src="@mipmap/logo"
                android:layout_gravity="center_horizontal"
                android:layout_margin="30dp"/>
            <EditText
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bg_set_edit"
                android:hint="@string/hint_register_account"
                android:textColorHint="@color/light_gray"
                android:textSize="15sp"
                android:drawablePadding="10dp"
                android:padding="5dp"
                android:drawableLeft="@mipmap/input_account"/>
         <!--   <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:button="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/set_visibility"
                    android:id="@+id/password_look" />
                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_set_edit"
                    android:hint="@string/hint_input_password"
                    android:textColorHint="@color/light_gray"
                    android:textSize="15sp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@mipmap/input_password"
                    android:layout_alignBaseline="@+id/password_look"
                    android:layout_alignBottom="@+id/password_look"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/bg_set_edit"
                    android:hint="@string/hint_input_password"
                    android:textColorHint="@color/light_gray"
                    android:textSize="15sp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@mipmap/input_password"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:button="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="32dp"
                    android:background="@drawable/set_visibility"
                    android:id="@+id/password_look" />
            </RelativeLayout>

            <EditText
                android:id="@+id/input_repassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bg_set_edit"
                android:hint="@string/hint_register_repassword"
                android:textColorHint="@color/light_gray"
                android:textSize="15sp"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/input_password"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/input_verification"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_set_edit"
                    android:hint="@string/hint_input_verification_code"
                    android:textColorHint="@color/light_gray"
                    android:textSize="15sp"
                    android:padding="5dp" />

                <CheckBox
                    android:id="@+id/get_verification_code"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/bg_set_edit"
                    android:textColor="@color/main_blue"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:button="@null"
                    android:text="@string/get_verification_code"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">
                <CheckBox
                    android:id="@+id/user_agreement_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@drawable/check_box_agree"/>
                <TextView
                    android:id="@+id/user_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_gray"
                    android:text="@string/read_and_agree"/>
            </LinearLayout>
            <TextView
                android:id="@+id/now_register_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_login_now"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:text="@string/register_now"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:text="@string/other_ways_login"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/register_zhifubao"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/light_gray"
                    android:drawableTop="@mipmap/logo_alipay"
                    android:drawablePadding="5dp"
                    android:text="@string/ali_pay"/>
                <TextView
                    android:id="@+id/register_weixin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/light_gray"
                    android:drawableTop="@mipmap/logo_weixin"
                    android:drawablePadding="5dp"
                    android:text="@string/weixin"/>
                <TextView
                    android:id="@+id/regisetr_weibo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/light_gray"
                    android:drawableTop="@mipmap/logo_weibo"
                    android:drawablePadding="5dp"
                    android:text="@string/weibo"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
